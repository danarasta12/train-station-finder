<div class="container">
  <h2>Modifier votre compte</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email, required: true, autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: "Mot de Passe",
                  hint: "laisser le vide si vous ne voulez pas le changer",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: "Confirmation du Mot de Passe",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: "Mot de Passe actuel",
                  hint: "vous avez besoin du mot de passe actuel pour confirmer vos changements",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Modifier", class: "btn btn-primary" %>
    </div>
  <% end %>
  <br>
  <h3>Supprimer mon compte</h3>

  <div>Non satisfait ? <%= button_to "Supprimer mon compte", registration_path(resource_name), class: "btn btn-primary", data: { confirm: "Confirmez-vous la suppression du compte ?", turbo_confirm: "Confirmez-vous la suppression du compte ?" }, method: :delete %></div>

  <br>
  <%= link_to "Retour", :back %>
</div>
